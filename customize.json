/*
	selector: CSS selector of the element to be edited.
			  All selectors are prepended with ".styles " to increase specificity.
	type:     Type of user interface to display and CSS to output. Can be: color, background-color, text
	label:    Name of this element to display in the user interface. First word only should be capitalized
	template: (optional) Used to override CSS output. Allows use of $selector and $value
*/
{
	"Header": [
		/* Background */
		{ "selector": "#branding", "type": "background-color", "label": "Background color" },
		/* Border -- Specific to the this theme */
		{ "selector": "#branding", "type": "border-top-color", "label": "Top border color" },
		/* Title */
		{ "selector": "#site-title a", "type": "text", "label": "Title" },
		{ "selector": "#site-title a:link, #site-title a:active, #site-title a:visited", "type": "color", "label": "Title color", "template": "$selector { color: $value !important; }" },
		{ "selector": "#site-title a:hover", "type": "color", "label": "Title link hover color", "template": "$selector { color: $value !important; }" },
		/* Description */
		{ "selector": "#site-description", "type": "text", "label": "Description" },
		{ "selector": "#site-description", "type": "color", "label": "Description color", "template": "$selector { color: $value !important; }" },
